---
import Section from "@/components/Sections.astro";
import { work } from "@cv";
---

<Section title="Experiencia">
    <ul>
        {
            work.map(
                ({
                    name,
                    startDate,
                    endDate,
                    position,
                    summary,
                    highlights,
                }) => {
                    const startYear = new Date(startDate).getFullYear();
                    const endYear =
                        endDate != null
                            ? new Date(endDate).getFullYear()
                            : "Actual";
                    const years = `${startYear} - ${endYear}`;
                    return (
                        <li>
                            <article>
                                <header>
                                    <div>
                                        <h3>{name}</h3>
                                        <h4>{position}</h4>
                                    </div>
                                    <time>{years}</time>
                                </header>

                                <footer>
                                    <p>{summary}</p>
                                </footer>
                                <ul>
                                    {highlights.map((highlight) => {
                                        return <li>{highlight}</li>;
                                    })}
                                </ul>
                            </article>
                        </li>
                    );
                },
            )
        }
    </ul>
</Section>

<style>
    article h4{
        color: #222;
        font-weight: 400;
    }
    article h3{
        color: #111;
    }

    header{
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 4px;
    }

    time{
        font-size: 0.85rem;
        color: #666;

    }
</style>
